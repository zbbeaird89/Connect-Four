#!/usr/bin/env ruby

require "bundler/setup"
require "connect_four.rb"
require "pry"


player1 = ConnectFour::Player.new(:name => "Zach", :symbol => "\u2776".encode("utf-8"))

player2 = ConnectFour::Player.new(:name => "Lauren", :symbol => "\u2777".encode("utf-8"))

players = [player1, player2]

board = ConnectFour::Board.new

game = ConnectFour::Game.new(board, players)

Pry.start(game)

